<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class=" navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <a class="navbar-brand " href="#">
            <img src="~/Content/Images/owl-book.png" alt="owl-book" style="width:40px;">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse offset-md-2" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("BOOKS", "Books", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </nav>

    <div class="container body-content my-5">
        @RenderBody()

        <footer class="text-center fixed-bottom text-white">
            <p>&copy; @DateTime.Now.Year - Korolko</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
